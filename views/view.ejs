<%- include("partials/header.ejs") %>
<body>
    <form action="/edit/<%= id %>" method="GET">
        <div class="form-group row my-3 mx-0">
          <label class="col-sm-1 col-form-label">Title</label>
          <div class="col-sm-10">
            <input type="text" class="form-control"  value="<%= title %>" readonly>
          </div>
        </div>
        <div class="form-group row mx-0">
          <label class="col-sm-1 col-form-label">Post</label>
          <div class="col-sm-10">
            <textarea type="textarea" class="form-control" rows="16" readonly><%= post %></textarea>
          </div>
        </div>
        <input type="submit" class="btn btn-primary" value="Edit">
      </form>
</body>

